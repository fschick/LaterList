@page "/list/{TodoListId:guid}"
@page "/laterlist/{TodoListId:guid}"
@inherits LaterListController

<h1 class="mb-3">@TodoList.Title</h1>

<ul class="list-group list-group-flush">
    @foreach (var todoItem in TodoList.Items)
    {
        <li class="list-group-item pl-0">
            <form class="form-inline">
                <label class="sr-only" for="title">Title</label>
                <input type="text" class="form-control mb-2 mr-sm-2" id="title" value="@todoItem.Title" />

                <div class="form-check mb-2 mr-sm-2">
                    <input class="form-check-input" type="checkbox" id="inlineFormCheck" checked="@(todoItem.IsDone)" />
                    <label class="form-check-label" for="inlineFormCheck">
                        Done
                    </label>
                </div>

                <button type="submit" class="btn btn-secondary mb-2">Update</button>
            </form>
        </li>
    }
</ul>
