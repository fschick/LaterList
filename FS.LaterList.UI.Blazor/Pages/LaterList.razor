@page "/list/{TodoListId:guid}"
@page "/laterlist/{TodoListId:guid}"
@inherits LaterListController

<div class="d-flex align-items-center mb-3">
    <div class="flex-grow-1">
        <h1 class="d-inline">@TodoList.Title</h1>
        <i class="material-icons pointer text-secondary" data-toggle="collapse" data-target="#updateTodoList" aria-expanded="false" aria-controls="updateTodoList">edit</i>
        <i class="material-icons pointer text-secondary" @onclick="@RemoveTodoList">delete</i>
    </div>
    <button type="button"
            class="btn btn-primary"
            data-toggle="collapse"
            data-target="#createTodoList"
            aria-expanded="false"
            aria-controls="createTodoList"
            @onclick="CreateTodoItem">
        <i class="material-icons align-bottom">playlist_add</i> Create Todo
    </button>
</div>

<TodoListEdit id="updateTodoList" TodoList="TodoList" OnSave="UpdateTodoList" />

<ul class="list-group list-group-flush">
    @foreach (var todoItem in TodoList.Items)
    {
        <li class="list-group-item pl-0">
            <TodoItemRow TodoItem="@todoItem" OnSave="UpdateTodoItem" OnRemove="DeleteTodoItem" />
        </li>
    }
</ul>
