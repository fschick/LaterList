@page "/Index"
@model FS.LaterList.Pages.IndexController
@namespace FS.LaterList.Pages
@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>LaterList</title>
    <base href="~/" />
    <link href="~/css/bootstrap.yeti/@(Model.IsDevelopment ? "bootstrap.yeti.css" : "bootstrap.yeti.min.css")" rel="stylesheet" />
    <link href="~/css/fs.laterlist.ui.blazor.css" rel="stylesheet" />
    <link href="~/css/github-corners/github-corner.css" rel="stylesheet" />
    <script src="~/js/jquery/@(Model.IsDevelopment ? "jquery-3.4.1.slim.js" : "jquery-3.4.1.slim.min.js")"></script>
    <script src="~/js/bootstrap/@(Model.IsDevelopment ? "bootstrap.bundle.js" : "bootstrap.bundle.min.js")"></script>
